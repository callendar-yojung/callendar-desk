{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Desktop Calendar",
  "version": "0.1.0",
  "identifier": "com.deskcal.app",

  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },

  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Desktop Calendar",
        "width": 1000,
        "height": 700,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "entitlements": "Entitlements.plist",
      "signingIdentity": "-",
      "infoPlist": "Info.plist"
    }
  },

  "plugins": {
    "shell": {
      "open": true
    },
    "deep-link": {
      "desktop": {
        "schemes": ["deskcal"]
      }
    }
  }
}
